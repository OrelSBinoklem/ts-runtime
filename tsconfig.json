{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2016", "dom", "webworker", "scripthost"],
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/docs",
    "src/play"
  ]
}
