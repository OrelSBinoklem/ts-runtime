{
  "name": "ts-runtime",
  "version": "0.1.0",
  "description": "Runtime type checks for TypeScript",
  "main": "index.js",
  "bin": {
    "tsr": "bin/index.js"
  },
  "repository": "https://github.com/fabiandev/ts-runtime.git",
  "author": "Fabian Pirklbauer <hi@fabiandev.io>",
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "build": "./node_modules/.bin/tsc --rootDir src --outDir dist --module CommonJS --target es6 --skipLibCheck && cp package.json dist/package.json",
    "build:tsr": "ts-node ./src/bin/index src/index.ts ./src/lib/index.ts ./src/bin/index.ts --compilerOptions '{\"outDir\": \"dist-tsr\", \"strictNullChecks\": false, \"moduleResolution\": \"Node\", \"module\": \"commonjs\", \"target\": \"ES5\", \"lib\": [\"ESNext\"]}'"
  },
  "_moduleAliases": {
    "ts-runtime": "dist"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "commondir": "^1.0.1",
    "find-up": "^2.1.0",
    "ora": "^1.2.0",
    "pretty-time": "^0.2.0",
    "rimraf": "^2.6.1",
    "typescript": "^2.4.0"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.3.31",
    "@types/node": "^7.0.2",
    "@types/rimraf": "^0.0.28",
    "flow-runtime": "^0.12.0",
    "module-alias": "^2.0.0"
  }
}
