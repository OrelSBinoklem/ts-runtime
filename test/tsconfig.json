  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["es2015"],
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true
  },
  "include": [
    "**/*"
  ],
  "typeRoots": [
    "../node_modules/@types",
    "./types"
  ]
}
